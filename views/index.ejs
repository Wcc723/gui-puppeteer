    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.21.1/axios.min.js"></script>
    <script type="module">
    import pupeteerMethods from '/javascripts/puppeteer-metods.js';
    import sample from '/javascripts/sample.js';
    const app = Vue.createApp({
      data() {
        return {
          work: {
            host: '',
            query: '',
            title: '',
            flows: [{ method: ''}]
          },
          flows: [{
            method: ''
          }],
          arrays: [{id:1}, {id:2}, {id: 3}],
          pupeteerMethods,
          sample
        };
      },
      methods: {
        updateMethod(flow) {
          if (this.pupeteerMethods[flow.method]?.parameterType === 'array') {
            flow.parameter = ['', ''];
          }
        },
        startTesting() {
          axios.post('/start-test', this.sample)
            .then(res => {
              console.log(res);
            })
        }
      },
